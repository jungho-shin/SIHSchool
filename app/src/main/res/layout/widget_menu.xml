<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_notice"
            android:gravity="center"
            android:text="@string/menu_notice"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_schedule"
            android:gravity="center"
            android:text="@string/menu_schedule"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_food"
            android:gravity="center"
            android:text="@string/menu_food"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_home"
            android:gravity="center"
            android:text="@string/menu_home"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_job"
            android:gravity="center"
            android:text="@string/menu_job"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_employee_news"
            android:gravity="center"
            android:text="@string/menu_employee_news"
            android:textColor="@drawable/selector_widget_menu_text_color"
            android:background="@drawable/selector_widget_menu_bg"/>

    </LinearLayout>

</LinearLayout>